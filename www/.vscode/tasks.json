{
	"version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "${workspaceFolder}/tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "codemix": {
                "lifecycle": "build",
                "validatedExtensions": [
                    "ts"
                ],
                "readyChecks": [
                    "node_modules_ready"
                ]
            }
        },
        {
            "type": "typescript",
            "tsconfig": "${workspaceFolder}/tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "codemix": {
                "lifecycle": "watch",
                "validatedExtensions": [
                    "ts"
                ],
                "readyChecks": [
                    "node_modules_ready"
                ]
            }
        }
    ]
}
